-->
			<button type="button" data-toggle="dropdown" class="btn text-uppercase">
			<!-- <li class="dropdown" class="btn text-uppercase"> -->
			<i class="fa fa-user fa-2x"></i>  Account <b class="caret"></b>
			</button>
			<ul class="dropdown-menu">                                                                                                                             
                        <li>                                                                                                                                               
                        <%= link_to edit_user_registration_path do %>                                                                                                      
                        <span class="glyphicon glyphicon-user"></span>Profile                                                                                              
                        <%end%></li>                                                                                                                                       
                        <% if current_user.admin? %>                                                                                                                       
                        <li>                                                                                                                                               
                        <%= link_to admin_root_path do %>                                                                                                                  
                        <span class="glyphicon glyphicon-cog"></span>Admin                                                                                                 
                        <%end%></li>                                                                                                                                       
                        <li>                                                                                                                                               
                        <%= link_to rails_admin_path do %>                                                                                                                 
                        <span class="glyphicon glyphicon-cog"></span>Rails Admin                                                                                           
                        <%end%></li>                                                                                                                                       
                        <%= link_to sidekiq_web_path do %>                                                                                                                 
                        <li>                                                                                                                                               
