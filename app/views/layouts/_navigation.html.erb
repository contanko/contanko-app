      <div class="col-sm-12">
         <!--
            ****** NAVIGATION WIDGET *******
            -->
            <div id="nav-widget" class="btn-group btn-group-justified">
            <div class="btn-group" style="width:6px;background-color:#fafaf5;border-bottom: 3px solid #fff;">
		<a target="_blank" href="http://www.contanko.com"><%= image_tag("primary_logo.png", :alt => "contanko", :style => "height:50px;width:auto;", :class => "center-block" ) %></a>
	    </div>
            <div class="btn-group">
               <%= link_to root_path, { :class=>"nav-btn-link" } do %><button type="button" class="btn text-uppercase"> <i class="fa fa-map-marker fa-2x"></i> Dashboard<span class="badge">beta</span></button><% end %>
            </div>
            <div class="btn-group">
               <%= link_to tankos_path, { :class=>"nav-btn-link" } do %><button type="button" class="btn text-uppercase"><i class="fa fa-cubes fa-2x"></i>  Tankos</button><% end %>
            </div>
	    <div class="btn-group">                                                                                                                                        
               <button type="button" class="btn text-uppercase"><i class="fa fa-cog fa-2x"></i>  Settings</button>                                                         
            </div> 
            <div class="btn-group">
               <!-- <button type="button" class="btn text-uppercase"><i class="fa fa-user fa-2x"></i>  Account</button> -->
		<% if !user_signed_in? %>                                                                                                                                  
			<%= link_to new_user_session_path, { :class=>"nav-btn-link" } do %><button type="button" class="btn text-uppercase">
                        <i class="fa fa-user fa-2x"></i>
 			Sign in</button><%end%>
			<% else %>                                                                                                                                                 
